#Only theoretical part so far.
def f(x,y):
    z=x+y
    return(z)


def explicit_Euler(f,T,N):
    t0=0
    u0=f(t0,0)
    U=[u0]
    h=T/N
    t=[t0]
    for i in range(1,N+1):
        ti=t[0]+i*h
        t.append(ti)
        U.append(U[-1]+h*f(t[-2], U[-1]))
    print(e**(t[-1])*((-t[-1])*e**(-t[-1])-(e**(-t[-1])) +1))
    return (t[-1], U[-1])
